{
  "name": "enzo",
  "type": "dark",
  "colors": {
    "editor.background": "#322931",
    "editor.foreground": "#b9b5b8",
    // Activity bar
    "activityBar.background": "#24222f",
    "activityBar.dropBackground": "#101731",
    "activityBar.foreground": "#ed7553",
    "activityBar.border": "#24222f",
    "activityBarBadge.background": "#101731",
    "activityBarBadge.foreground": "#73f0ae",
    // Input
    "input.background": "#24222f",
    "inputOption.activeBorder": "#73f0ae",
    "input.foreground": "#73f0ae",
    // Scrollbar
    "scrollbarSlider.activeBackground": "#10173166",
    // Sidebar
    "sideBar.background": "#24222f",
    "sideBar.foreground": "#ff677b",
    "sideBar.border": "#101731",
    "sideBar.dropBackground": "#000098",
    "sideBarTitle.foreground": "#f6c34d",
    "sideBarSectionHeader.background": "#101731d3",
    "sideBarSectionHeader.foreground": "#72edebce",
    // tabs
    "editorGroupHeader.tabsBackground": "#24222f",
    "tab.inactiveBackground": "#24222fe",
    "tab.activeForeground": "#f4ff7a",
    "tab.activeBorder": "#f4ff7a",
    "tab.inactiveForeground": "#ed7553",
    "tab.hoverBackground": "#000014",
    "focusBorder": "#45272f",
    "foreground": "#ff677b",
    "widget.shadow": "#101731",
    "selection.background": "#101731",
    "descriptionForeground": "#f4ff7a",
    "errorForeground": "#ff0030",
    // buttons
    "button.background": "#101731",
    "button.foreground": "#4a88e4",
    "button.hoverBackground": "#f4ff7a",
    "badge.foreground": "#f4ff7a",
    "badge.background": "#101731",
    // editor lines and selections
    "editorLineNumber.activeForeground": "#f4ff7a",
    //"editorIndentGuide.activeBackground": "#ffcb43",
    "editor.lineHighlightBackground": "#251e4d",
    "editor.rangeHighlightBackground": "#101731",
    "editor.rangeHighlightBorder": "#72edeb",
    "editor.selectionBackground": "#0c0e5d",
    "editor.selectionForeground": "#101731",
    "editor.selectionHighlightBackground": "#211a5766",
    //"editor.selectionHighlightBorder": "#72edeb",
    "editorCursor.foreground": "#f4ff7a",
    // bottom status bar
    "editorWidget.background": "#24222f",
    "statusBar.background": "#24222f",
    "statusBar.noFolderBackground": "#6d312e",
    "titleBar.activeBackground": "#24222f",
    // Panel and Terminal
    "panel.background": "#0c0e5d",
    "panel.border": "#73f0ae",
    "panelTitle.activeForeground": "#e5ff00",
    "panelTitle.inactiveForeground": "#73f0ad5d",
    "terminal.foreground": "#A8FD20",
    "terminal.selectionBackground": "#0e000f4b",
    "editorMarkerNavigationWarning.background": "#ff0030",
    "editorSuggestWidget.background": "#24222fe",
    "editorSuggestWidget.selectedBackground": "#000098",
    "list.activeSelectionBackground": "#0e000f4b",
    "list.activeSelectionForeground": "#e5ff00",
    "list.inactiveSelectionBackground": "#0e000f4b",
    "list.hoverBackground": "#000098",
    "list.focusBackground": "#22259a",
    "terminal.ansiBrightMagenta": "#ff1677",
    "terminal.ansiBrightRed": "#ff677b"
  },
  "tokenColors": [
    {
      "settings": {
        "background": "#322931",

        "foreground": "#b9b5b8"
      }
    },
    {
      "name": "Text",
      "scope": "variable.parameter.function",
      "settings": {
        "foreground": "#b9b5b8"
      }
    },
    {
      "name": "Comments",
      "scope": ["comment", "punctuation.definition.comment"],
      "settings": {
        "foreground": "#797379"
      }
    },
    {
      "name": "Punctuation",
      "scope": [
        "punctuation.definition.string",
        "punctuation.definition.variable",
        "punctuation.definition.string",
        "punctuation.definition.parameters",
        "punctuation.definition.string",
        "punctuation.definition.array"
      ],
      "settings": {
        "foreground": "#b9b5b8"
      }
    },
    {
      "name": "Delimiters",
      "scope": "none",
      "settings": {
        "foreground": "#b9b5b8"
      }
    },
    {
      "name": "Operators",
      "scope": "keyword.operator",
      "settings": {
        "foreground": "#b9b5b8"
      }
    },
    {
      "name": "Keywords",
      "scope": ["keyword", "keyword.control"],
      "settings": {
        "foreground": "#ff677b"
      }
    },
    {
      "name": "Variables",
      "scope": "variable",
      "settings": {
        "foreground": "#dd464c"
      }
    },
    {
      "name": "Functions",
      "scope": [
        "entity.name.function",
        "meta.require",
        "support.function.any-method"
      ],
      "settings": {
        "foreground": "#4a88e4"
      }
    },
    {
      "name": "Classes",
      "scope": ["support.class", "entity.name.class", "entity.name.type"],
      "settings": {
        "foreground": "#ffa624"
      }
    },
    {
      "name": "Methods",
      "scope": "keyword.other.special-method",
      "settings": {
        "foreground": "#4a88e4"
      }
    },
    {
      "name": "Storage",
      "scope": "storage",
      "settings": {
        "foreground": "#ff677b"
      }
    },
    {
      "name": "Support",
      "scope": "support.function",
      "settings": {
        "foreground": "#d4994b"
      }
    },
    {
      "name": "Strings, Inherited Class",
      "scope": [
        "string",
        "constant.other.symbol",
        "entity.other.inherited-class"
      ],
      "settings": {
        "foreground": "#A8FD20"
      }
    },
    {
      "name": "Integers",
      "scope": "constant.numeric",
      "settings": {
        "foreground": "#fd8b19"
      }
    },
    {
      "name": "Floats",
      "scope": "none",
      "settings": {
        "foreground": "#fd8b19"
      }
    },
    {
      "name": "Boolean",
      "scope": "none",
      "settings": {
        "foreground": "#fd8b19"
      }
    },
    {
      "name": "Constants",
      "scope": "constant",
      "settings": {
        "foreground": "#fd8b19"
      }
    },
    {
      "name": "Tags",
      "scope": "entity.name.tag",
      "settings": {
        "foreground": "#dd464c"
      }
    },
    {
      "name": "Attributes",
      "scope": "entity.other.attribute-name",
      "settings": {
        "foreground": "#fd8b19"
      }
    },
    {
      "name": "Attribute IDs",
      "scope": [
        "entity.other.attribute-name.id",
        "punctuation.definition.entity"
      ],
      "settings": {
        "foreground": "#4a88e4"
      }
    },
    {
      "name": "Selector",
      "scope": "meta.selector",
      "settings": {
        "foreground": "#ff677b"
      }
    },
    {
      "name": "Values",
      "scope": "none",
      "settings": {
        "foreground": "#fd8b19"
      }
    },
    {
      "name": "Headings",
      "scope": [
        "markup.heading",
        "markup.heading.setext",
        "punctuation.definition.heading",
        "entity.name.section"
      ],
      "settings": {
        "fontStyle": "",
        "foreground": "#4a88e4"
      }
    },
    {
      "name": "Units",
      "scope": "keyword.other.unit",
      "settings": {
        "foreground": "#fd8b19"
      }
    },
    {
      "name": "Bold",
      "scope": ["markup.bold", "punctuation.definition.bold"],
      "settings": {
        "fontStyle": "bold",
        "foreground": "#ffa624"
      }
    },
    {
      "name": "Italic",
      "scope": ["markup.italic", "punctuation.definition.italic"],
      "settings": {
        "fontStyle": "italic",
        "foreground": "#ff677b"
      }
    },
    {
      "name": "Code",
      "scope": "markup.inline.raw",
      "settings": {
        "foreground": "#A8FD20"
      }
    },
    {
      "name": "Link Text",
      "scope": "string.other.link",
      "settings": {
        "foreground": "#dd464c"
      }
    },
    {
      "name": "Link Url",
      "scope": "meta.link",
      "settings": {
        "foreground": "#fd8b19"
      }
    },
    {
      "name": "Lists",
      "scope": "markup.list",
      "settings": {
        "foreground": "#dd464c"
      }
    },
    {
      "name": "Quotes",
      "scope": "markup.quote",
      "settings": {
        "foreground": "#fd8b19"
      }
    },
    {
      "name": "Separator",
      "scope": "meta.separator",
      "settings": {
        "background": "#797379",
        "foreground": "#b9b5b8"
      }
    },
    {
      "name": "Inserted",
      "scope": "markup.inserted",
      "settings": {
        "foreground": "#A8FD20"
      }
    },
    {
      "name": "Deleted",
      "scope": "markup.deleted",
      "settings": {
        "foreground": "#dd464c"
      }
    },
    {
      "name": "Changed",
      "scope": "markup.changed",
      "settings": {
        "foreground": "#ff677b"
      }
    },
    {
      "name": "Colors",
      "scope": "constant.other.color",
      "settings": {
        "foreground": "#d4994b"
      }
    },
    {
      "name": "Regular Expressions",
      "scope": "string.regexp",
      "settings": {
        "foreground": "#d4994b"
      }
    },
    {
      "name": "Escape Characters",
      "scope": "constant.character.escape",
      "settings": {
        "foreground": "#d4994b"
      }
    },
    {
      "name": "Embedded",
      "scope": ["punctuation.section.embedded", "variable.interpolation"],
      "settings": {
        "foreground": "#73f0ae"
      }
    },
    {
      "name": "Invalid",
      "scope": "invalid.illegal",
      "settings": {
        "foreground": "#dd464c"
      }
    },

    //Json Layers theming
    {
      "name": "JSON Value - Level 0",
      "scope": [
        "source.json meta.structure.dictionary.json string.quoted.double.json"
      ],
      "settings": {
        "foreground": "#e5ff00"
      }
    },
    {
      "name": "JSON value - Level 1",
      "scope": [
        "source.json meta.structure.dictionary.json meta.structure.dictionary.value.json meta.structure.dictionary.json string.quoted.double.json"
      ],
      "settings": {
        "foreground": "#ffa624"
      }
    },
    {
      "name": "JSON value - Level 2",
      "scope": [
        "source.json meta.structure.dictionary.json meta.structure.dictionary.value.json meta.structure.dictionary.json meta.structure.dictionary.value.json meta.structure.dictionary.json string.quoted.double.json"
      ],
      "settings": {
        "foreground": "#ff6f5c"
      }
    },
    {
      "name": "JSON Key - Level 0",
      "scope": [
        "source.json meta.structure.dictionary.json support.type.property-name.json"
      ],
      "settings": {
        "foreground": "#73f0ae",
        "fontStyle": "bold"
      }
    },
    {
      "name": "JSON Key - Level 1",
      "scope": [
        "source.json meta.structure.dictionary.json meta.structure.dictionary.value.json meta.structure.dictionary.json support.type.property-name.json"
      ],
      "settings": {
        "foreground": "#73f0ae",
        "fontStyle": "bold"
      }
    },
    {
      "name": "JSON value - Level 2",
      "scope": [
        "source.json meta.structure.dictionary.json meta.structure.dictionary.value.json meta.structure.dictionary.json meta.structure.dictionary.value.json meta.structure.dictionary.json support.type.property-name.json"
      ],
      "settings": {
        "foreground": "#A8FD20",
        "fontStyle": "bold"
      }
    },

    //CSS selectors
    {
      "name": "CSS selectors",
      "scope": [
        "source.css.scss entity.other.attribute-name.class.css punctuation.definition.entity.css"
      ],
      "settings": {
        "foreground": "#ff677b",
        "fontStyle": "bold"
      }
    },
    {
      "name": "CSS selectors",
      "scope": ["source.css.scss entity.other.attribute-name.class.css"],
      "settings": {
        "foreground": "#ff677b",
        "fontStyle": "bold"
      }
    },
    //CSS property values
    {
      "name": "CSS property values",
      "scope": [
        "source.css.scss meta.property-list.scss meta.property-list.scss meta.property-list.scss meta.property-value.scss support.constant.property-value.css"
      ],
      "settings": {
        "foreground": "#f4ff7a"
      }
    },
    //SCSS property value levels
    {
      "name": "SCSS property Level1",
      "scope": [
        "support.type.property-name.css meta.property-name.scss meta.property-list.scss source.css.scss"
      ],
      "settings": {
        "foreground": "#4a88e4",
        "fontStyle": "bold"
      }
    },
    {
      "name": "CSS property",
      "scope": [
        "source.css.scss meta.property-list.scss meta.property-list.scss meta.property-list.scss meta.property-name.scss support.type.property-name.css"
      ],
      "settings": {
        "foreground": "#4a88e4",
        "fontStyle": "bold"
      }
    },
    {
      "name": "CSS ID",
      "scope": [
        "source.css.scss meta.property-list.scss meta.property-list.scss meta.property-list.scss entity.other.attribute-name.id.css"
      ],
      "settings": {
        "foreground": "#ff677b",
        "fontStyle": "bold"
      }
    },
    // Webpack stuff
    {
      "name": "WebPack property ide",
      "scope": [
        "source.js meta.objectliteral.js meta.object.member.js meta.object-literal.key.js"
      ],
      "settings": {
        "foreground": "#ff677b"
      }
    },
    {
      "name": "WebPack property ide level 2",
      "scope": [
        "source.js meta.objectliteral.js meta.object.member.js meta.objectliteral.js meta.object.member.js meta.object-literal.key.js"
      ],
      "settings": {
        "foreground": "#ff67d9"
      }
    },
    // Javascript punctuation
    {
      "name": "JS semicolons",
      "scope": ["punctuation.terminator.statement.js"],
      "settings": {
        "foreground": "#ff6f5c"
      }
    },
    {
      "name": ". in between functions/variables",
      "scope": ["punctuation.accessor.js"],
      "settings": {
        "foreground": "#ff6f5c"
      }
    },

    {
      "name": "quotation marks",
      "scope": ["punctuation.definition.string.begin.js"],
      "settings": {
        "foreground": "#9fb30e"
      }
    },
    {
      "name": "quotation marks",
      "scope": ["punctuation.definition.string.end.js"],
      "settings": {
        "foreground": "#9fb30e"
      }
    },
    {
      "name": "quotation marks",
      "scope": [" punctuation.definition.string.begin.html"],
      "settings": {
        "foreground": "#9fb30e"
      }
    },
    {
      "name": "quotation marks",
      "scope": [" punctuation.definition.string.end.html"],
      "settings": {
        "foreground": "#9fb30e"
      }
    },

