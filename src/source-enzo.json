{
  "name": "enzo",
  "type": "dark",
  "colors": {
    "editor.background": "%background%",
    "editor.foreground": "%foreground%",
    // Activity bar
    "activityBar.background": "%background1%",
    "activityBar.dropBackground": "%background2%",
    "activityBar.foreground": "%foreground1%",
    "activityBar.border": "%background1%",
    "activityBarBadge.background": "%background2%",
    "activityBarBadge.foreground": "%hypergreen%",
    // Input
    "input.background": "%background1%",
    "inputOption.activeBorder": "%hypergreen%",
    "input.foreground": "%hypergreen%",
    // Scrollbar
    "scrollbarSlider.activeBackground": "%background2%66",
    // Sidebar
    "sideBar.background": "%background1%",
    "sideBar.foreground": "%salmon%",
    "sideBar.border": "%background2%",
    "sideBar.dropBackground": "%retroblue%",
    "sideBarTitle.foreground": "%yellow%",
    "sideBarSectionHeader.background": "%background2%d3",
    "sideBarSectionHeader.foreground": "%cyan%ce",
    // tabs
    "editorGroupHeader.tabsBackground": "%background1%",
    "tab.inactiveBackground": "%background1%e",
    "tab.activeForeground": "%hyperyellow%",
    "tab.activeBorder": "%hyperyellow%",
    "tab.inactiveForeground": "%foreground1%",
    "tab.hoverBackground": "%black%",
    "focusBorder": "#45272f",
    "foreground": "%salmon%",
    "widget.shadow": "%background2%",
    "selection.background": "%background2%",
    "descriptionForeground": "%hyperyellow%",
    "errorForeground": "%error%",
    // buttons
    "button.background": "%background2%",
    "button.foreground": "%lightblue%",
    "button.hoverBackground": "%hyperyellow%",
    "badge.foreground": "%hyperyellow%",
    "badge.background": "%background2%",
    // editor lines and selections
    "editorLineNumber.activeForeground": "%hyperyellow%",
    //"editorIndentGuide.activeBackground": "#ffcb43",
    "editor.lineHighlightBackground": "%deeppurple%",
    "editor.rangeHighlightBackground": "%background2%",
    "editor.rangeHighlightBorder": "%cyan%",
    "editor.selectionBackground": "%terminalbackground%",
    "editor.selectionForeground": "%background2%",
    "editor.selectionHighlightBackground": "#211a5766",
    //"editor.selectionHighlightBorder": "%cyan%",
    "editorCursor.foreground": "%hyperyellow%",
    // bottom status bar
    "editorWidget.background": "%background1%",
    "statusBar.background": "%background1%",
    "statusBar.noFolderBackground": "#522f33",
    "titleBar.activeBackground": "%background1%",
    // Panel and Terminal
    "panel.background": "%terminalbackground%",
    "panel.border": "%hypergreen%",
    "panelTitle.activeForeground": "%lemonyellow%",
    "panelTitle.inactiveForeground": "%fadedgreen%",
    "terminal.foreground": "%limegreen%",
    "terminal.selectionBackground": "%smoke%",
    "editorMarkerNavigationWarning.background": "%error%",
    "editorSuggestWidget.background": "%background1%e",
    "editorSuggestWidget.selectedBackground": "%retroblue%",
    "list.activeSelectionBackground": "%smoke%",
    "list.activeSelectionForeground": "%lemonyellow%",
    "list.inactiveSelectionBackground": "%smoke%",
    "list.hoverBackground": "%retroblue%",
    "list.focusBackground": "#002998ce",
    "terminal.ansiBrightMagenta": "%magenta%",
    "terminal.ansiBrightRed": "%salmon%"
  },
  "tokenColors": [
    {
      "settings": {
        "background": "%background%",

        "foreground": "%foreground%"
      }
    },
    {
      "name": "Text",
      "scope": "variable.parameter.function",
      "settings": {
        "foreground": "%foreground%"
      }
    },
    {
      "name": "Comments",
      "scope": ["comment", "punctuation.definition.comment"],
      "settings": {
        "foreground": "%midground%"
      }
    },
    {
      "name": "Punctuation",
      "scope": [
        "punctuation.definition.string",
        "punctuation.definition.variable",
        "punctuation.definition.string",
        "punctuation.definition.parameters",
        "punctuation.definition.string",
        "punctuation.definition.array"
      ],
      "settings": {
        "foreground": "%foreground%"
      }
    },
    {
      "name": "Delimiters",
      "scope": "none",
      "settings": {
        "foreground": "%foreground%"
      }
    },
    {
      "name": "Operators",
      "scope": "keyword.operator",
      "settings": {
        "foreground": "%foreground%"
      }
    },
    {
      "name": "Keywords",
      "scope": ["keyword", "keyword.control"],
      "settings": {
        "foreground": "%salmon%"
      }
    },
    {
      "name": "Variables",
      "scope": "variable",
      "settings": {
        "foreground": "%red%"
      }
    },
    {
      "name": "Functions",
      "scope": [
        "entity.name.function",
        "meta.require",
        "support.function.any-method"
      ],
      "settings": {
        "foreground": "%lightblue%"
      }
    },
    {
      "name": "Classes",
      "scope": ["support.class", "entity.name.class", "entity.name.type"],
      "settings": {
        "foreground": "%goldfish%"
      }
    },
    {
      "name": "Methods",
      "scope": "keyword.other.special-method",
      "settings": {
        "foreground": "%lightblue%"
      }
    },
    {
      "name": "Storage",
      "scope": "storage",
      "settings": {
        "foreground": "%salmon%"
      }
    },
    {
      "name": "Support",
      "scope": "support.function",
      "settings": {
        "foreground": "%tan%"
      }
    },
    {
      "name": "Strings, Inherited Class",
      "scope": [
        "string",
        "constant.other.symbol",
        "entity.other.inherited-class"
      ],
      "settings": {
        "foreground": "%limegreen%"
      }
    },
    {
      "name": "Integers",
      "scope": "constant.numeric",
      "settings": {
        "foreground": "%orange%"
      }
    },
    {
      "name": "Floats",
      "scope": "none",
      "settings": {
        "foreground": "%orange%"
      }
    },
    {
      "name": "Boolean",
      "scope": "none",
      "settings": {
        "foreground": "%orange%"
      }
    },
    {
      "name": "Constants",
      "scope": "constant",
      "settings": {
        "foreground": "%orange%"
      }
    },
    {
      "name": "Tags",
      "scope": "entity.name.tag",
      "settings": {
        "foreground": "%red%"
      }
    },
    {
      "name": "Attributes",
      "scope": "entity.other.attribute-name",
      "settings": {
        "foreground": "%orange%"
      }
    },
    {
      "name": "Attribute IDs",
      "scope": [
        "entity.other.attribute-name.id",
        "punctuation.definition.entity"
      ],
      "settings": {
        "foreground": "%lightblue%"
      }
    },
    {
      "name": "Selector",
      "scope": "meta.selector",
      "settings": {
        "foreground": "%salmon%"
      }
    },
    {
      "name": "Values",
      "scope": "none",
      "settings": {
        "foreground": "%orange%"
      }
    },
    {
      "name": "Headings",
      "scope": [
        "markup.heading",
        "markup.heading.setext",
        "punctuation.definition.heading",
        "entity.name.section"
      ],
      "settings": {
        "fontStyle": "",
        "foreground": "%lightblue%"
      }
    },
    {
      "name": "Units",
      "scope": "keyword.other.unit",
      "settings": {
        "foreground": "%orange%"
      }
    },
    {
      "name": "Bold",
      "scope": ["markup.bold", "punctuation.definition.bold"],
      "settings": {
        "fontStyle": "bold",
        "foreground": "%goldfish%"
      }
    },
    {
      "name": "Italic",
      "scope": ["markup.italic", "punctuation.definition.italic"],
      "settings": {
        "fontStyle": "italic",
        "foreground": "%salmon%"
      }
    },
    {
      "name": "Code",
      "scope": "markup.inline.raw",
      "settings": {
        "foreground": "%limegreen%"
      }
    },
    {
      "name": "Link Text",
      "scope": "string.other.link",
      "settings": {
        "foreground": "%red%"
      }
    },
    {
      "name": "Link Url",
      "scope": "meta.link",
      "settings": {
        "foreground": "%orange%"
      }
    },
    {
      "name": "Lists",
      "scope": "markup.list",
      "settings": {
        "foreground": "%red%"
      }
    },
    {
      "name": "Quotes",
      "scope": "markup.quote",
      "settings": {
        "foreground": "%orange%"
      }
    },
    {
      "name": "Separator",
      "scope": "meta.separator",
      "settings": {
        "background": "%midground%",
        "foreground": "%foreground%"
      }
    },
    {
      "name": "Inserted",
      "scope": "markup.inserted",
      "settings": {
        "foreground": "%limegreen%"
      }
    },
    {
      "name": "Deleted",
      "scope": "markup.deleted",
      "settings": {
        "foreground": "%red%"
      }
    },
    {
      "name": "Changed",
      "scope": "markup.changed",
      "settings": {
        "foreground": "%salmon%"
      }
    },
    {
      "name": "Colors",
      "scope": "constant.other.color",
      "settings": {
        "foreground": "%tan%"
      }
    },
    {
      "name": "Regular Expressions",
      "scope": "string.regexp",
      "settings": {
        "foreground": "%tan%"
      }
    },
    {
      "name": "Escape Characters",
      "scope": "constant.character.escape",
      "settings": {
        "foreground": "%tan%"
      }
    },
    {
      "name": "Embedded",
      "scope": ["punctuation.section.embedded", "variable.interpolation"],
      "settings": {
        "foreground": "%hypergreen%"
      }
    },
    {
      "name": "Invalid",
      "scope": "invalid.illegal",
      "settings": {
        "foreground": "%red%"
      }
    },

    //Json Layers theming
    {
      "name": "JSON Value - Level 0",
      "scope": [
        "source.json meta.structure.dictionary.json string.quoted.double.json"
      ],
      "settings": {
        "foreground": "%lemonyellow%"
      }
    },
    {
      "name": "JSON value - Level 1",
      "scope": [
        "source.json meta.structure.dictionary.json meta.structure.dictionary.value.json meta.structure.dictionary.json string.quoted.double.json"
      ],
      "settings": {
        "foreground": "%goldfish%"
      }
    },
    {
      "name": "JSON value - Level 2",
      "scope": [
        "source.json meta.structure.dictionary.json meta.structure.dictionary.value.json meta.structure.dictionary.json meta.structure.dictionary.value.json meta.structure.dictionary.json string.quoted.double.json"
      ],
      "settings": {
        "foreground": "%sunset%"
      }
    },
    {
      "name": "JSON Key - Level 0",
      "scope": [
        "source.json meta.structure.dictionary.json support.type.property-name.json"
      ],
      "settings": {
        "foreground": "%hypergreen%",
        "fontStyle": "bold"
      }
    },
    {
      "name": "JSON Key - Level 1",
      "scope": [
        "source.json meta.structure.dictionary.json meta.structure.dictionary.value.json meta.structure.dictionary.json support.type.property-name.json"
      ],
      "settings": {
        "foreground": "%hypergreen%",
        "fontStyle": "bold"
      }
    },
    {
      "name": "JSON value - Level 2",
      "scope": [
        "source.json meta.structure.dictionary.json meta.structure.dictionary.value.json meta.structure.dictionary.json meta.structure.dictionary.value.json meta.structure.dictionary.json support.type.property-name.json"
      ],
      "settings": {
        "foreground": "%limegreen%",
        "fontStyle": "bold"
      }
    },

    //CSS selectors
    {
      "name": "CSS selectors",
      "scope": [
        "source.css.scss entity.other.attribute-name.class.css punctuation.definition.entity.css"
      ],
      "settings": {
        "foreground": "%salmon%",
        "fontStyle": "bold"
      }
    },
    {
      "name": "CSS selectors",
      "scope": ["source.css.scss entity.other.attribute-name.class.css"],
      "settings": {
        "foreground": "%salmon%",
        "fontStyle": "bold"
      }
    },
    //CSS property values
    {
      "name": "CSS property values",
      "scope": [
        "source.css.scss meta.property-list.scss meta.property-list.scss meta.property-list.scss meta.property-value.scss support.constant.property-value.css"
      ],
      "settings": {
        "foreground": "%hyperyellow%"
      }
    },
    //SCSS property value levels
    {
      "name": "SCSS property Level1",
      "scope": [
        "support.type.property-name.css meta.property-name.scss meta.property-list.scss source.css.scss"
      ],
      "settings": {
        "foreground": "%blue%",
        "fontStyle": "bold"
      }
    },
    {
      "name": "CSS property",
      "scope": [
        "source.css.scss meta.property-list.scss meta.property-list.scss meta.property-list.scss meta.property-name.scss support.type.property-name.css"
      ],
      "settings": {
        "foreground": "%blue%",
        "fontStyle": "bold"
      }
    },
    {
      "name": "CSS ID",
      "scope": [
        "source.css.scss meta.property-list.scss meta.property-list.scss meta.property-list.scss entity.other.attribute-name.id.css"
      ],
      "settings": {
        "foreground": "%salmon%",
        "fontStyle": "bold"
      }
    },
    // Webpack stuff
    {
      "name": "WebPack property ide",
      "scope": [
        "source.js meta.objectliteral.js meta.object.member.js meta.object-literal.key.js"
      ],
      "settings": {
        "foreground": "%salmon%"
      }
    },
    {
      "name": "WebPack property ide level 2",
      "scope": [
        "source.js meta.objectliteral.js meta.object.member.js meta.objectliteral.js meta.object.member.js meta.object-literal.key.js"
      ],
      "settings": {
        "foreground": "%pink%"
      }
    },
    // Javascript punctuation
    {
      "name": "JS semicolons",
      "scope": ["punctuation.terminator.statement.js"],
      "settings": {
        "foreground": "%sunset%"
      }
    },
    {
      "name": ". in between functions/variables",
      "scope": ["punctuation.accessor.js"],
      "settings": {
        "foreground": "%sunset%"
      }
    },

    {
      "name": "quotation marks",
      "scope": ["punctuation.definition.string.begin.js"],
      "settings": {
        "foreground": "%slimegreen%"
      }
    },
    {
      "name": "quotation marks",
      "scope": ["punctuation.definition.string.end.js"],
      "settings": {
        "foreground": "%slimegreen%"
      }
    },
    {
      "name": "quotation marks",
      "scope": [" punctuation.definition.string.begin.html"],
      "settings": {
        "foreground": "%slimegreen%"
      }
    },
    {
      "name": "quotation marks",
      "scope": [" punctuation.definition.string.end.html"],
      "settings": {
        "foreground": "%slimegreen%"
      }
    },

    {
      "name": "commas",
      "scope": ["punctuation.separator.comma.js"],
      "settings": {
        "foreground": "%yellow%"
      }
    },

    {
      "name": "array brackets",
      "scope": ["meta.array.literal.js meta.brace.square.js "],
      "settings": {
        "foreground": "%yellow%"
      }
    },

    {
      "name": "equals sign for assigning variables",
      "scope": ["keyword.operator.assignment.js"],
      "settings": {
        "foreground": "%goldfish%"
      }
    },

    {
      "name": "equals sign for assigning variables",
      "scope": ["punctuation.separator.key-value.html"],
      "settings": {
        "foreground": "%goldfish%"
      }
    },

    {
      "name": "comparison sign",
      "scope": ["keyword.operator.comparison.js"],
      "settings": {
        "foreground": "%goldfish%"
      }
    },

    // fix missing array functions
    {
      "name": "array function",
      "scope": ["support.variable.property.js"],
      "settings": {
        "foreground": "%salmon%"
      }
    },

    {
      "name": "variable being used with a function",
      "scope": ["support.variable.property.js"],
      "settings": {
        "foreground": "%magenta%"
      }
    },

    {
      "name": "operators",
      "scope": ["keyword.operator.arithmetic.js"],
      "settings": {
        "foreground": "%goldfish%"
      }
    }
  ]
}
